@model eShopping.Models.Order

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Order</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.OrderID)
    @Html.HiddenFor(model => model.ID_Cliente)
    @Html.HiddenFor(model => model.Data_Venda)
    @Html.HiddenFor(model => model.Preco_Total)
    @Html.HiddenFor(model => model.Estado)
    @Html.HiddenFor(model => model.EstadoID)


    <div class="form-group">
        @Html.LabelFor(model => model.EntregaID, "Select the delivery method", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("EntregaID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EntregaID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "UserOrders")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
