@model IEnumerable<eShopping.Models.Order>

<meta name="viewport" content="width=device-width" />
<title>UserOrders</title>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Entrega.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco_Total)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.OrderID)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Entrega.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco_Total)
            </td>
            <td>
                | @Html.ActionLink("Change the Delivery Method", "Edit", new { id = item.OrderID }) |
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Checkout", "FUserOrders") | @Html.ActionLink("Back To Cart", "Cart","ProductsOrders")
</p> 




