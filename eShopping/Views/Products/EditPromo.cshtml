@model eShopping.Models.Products

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Products</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ProductID)
    @Html.HiddenFor(model => model.CompanyId)
    @Html.HiddenFor(model => model.Nome_Produto)
    @Html.HiddenFor(model => model.Stock)
    @Html.HiddenFor(model => model.Preco_Produto)
    @Html.HiddenFor(model => model.EstaNoCatalogo)
    @Html.HiddenFor(model => model.CategoriaID)

    <div class="form-group">
        @Html.LabelFor(model => model.Taxa_Promocao, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Taxa_Promocao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Taxa_Promocao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
