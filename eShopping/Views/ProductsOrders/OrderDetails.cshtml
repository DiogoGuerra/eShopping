@model IEnumerable<eShopping.Models.ProductsOrder>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Nome_Produto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco_Produto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Produto.Nome_Produto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantidade)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Preco_Produto)
    </td>
</tr>
}

</table>
